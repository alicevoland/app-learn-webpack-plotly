<% content_for :jumbotron do %>
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-4"> Espace personnel </h1>
      <p class="lead"> <%= @user.email %> </p>
    </div>
  </div>
<% end %>

<div class="container">

  <h2> Mes roues de la vie </h2>

  <table class="my-3">
    <tbody>
      <tr>
        <th class="px-2"> Date </th>
        <th class="px-2"> Mod√®le de roue </th>
        <th class="px-2"> </th>
      </tr>
      <% @user.wheel_values.each do |wheel_value| %>
        <tr>
          <td class="px-2"> <%= l wheel_value.created_at %> </td>
          <td class="px-2"> <%= link_to wheel_value.wheel_model.name, wheel_model_path(wheel_value.wheel_model) %> </td>
          <td class="px-2"> <%= link_to "Voir la roue", user_wheel_value_path(@user, wheel_value), class: "btn btn-outline-primary" %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
